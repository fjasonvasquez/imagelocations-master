<div id="regions">
	<h4 class="text-center uppercase">~&nbsp;Select a Region&nbsp;~</h2>
<% if regions.any? %>
	<% regions.each_with_index do |be, index| %>
		<% if index.zero? || index % 3 == 0 %>
			<div class="row-fluid">
		
		<% end %>
				<div class="span4">
					<%= render :partial => "shared/banners/default/#{be.class.entity_association.to_s}/row", :locals => {:banner => be}, :formats => [:html] %>
				</div>
		
		<% if index + 1 ==  regions.length || (index + 1) % 3 == 0 %>
			</div>
		<% end %>
			
	<% end %>
<% else %>
	
	<p>There are no locations in this region</p>

<% end %>
</div>