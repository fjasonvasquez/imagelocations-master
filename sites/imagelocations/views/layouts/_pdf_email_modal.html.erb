<div id="pdf-email-location-modal" class="modal hide fade" tabindex="-1" role="dialog">
	  <div class="modal-header">
	    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
	    <h3 class="modal-title">Emailing Location PDF</h3>
	  </div>
	  <div class="modal-body">
		  <%= simple_form_for Email.new(:user => current_user), :url => email_collections_path, :method => :post, :remote => true, :validate => true, 
		  		:html => {
		  			:id => 'new_pdf_location_email',
		  			:class => 'form-horizontal',
		  			:data => {
		  				:method => "post"
		  			}
		  		} do |f| %>
		  	<div class="form-inputs">
		  		<%= f.input :sender %>
		  	</div>
		  	<div class="form-inputs">
		  	<%= f.input :recipient %>
		  	</div>
		  	<div class="form-inputs">
		  	<%= f.input :cc %>
		  	</div>
		  	<div class="form-inputs">
		  	<%= f.input :bcc %>
		  	</div>
		  	<div class="form-inputs">
		  	<%= f.input :subject %>
		  	</div>
		  	<div class="form-inputs">
		  	<%= f.input :body, :as => :text, :input_html => {:rows => 5} %>
		  	</div>
		  	
		  	<%= hidden_field_tag :element, '#pdf-email-location-modal' %>

		  	<%= hash_as_hidden_fields({:collection => { :name => object.name, :asset_entity_ids => @gallery_images.collect {|i| i.id }}}) %>
		  <% end %>

	  </div>
	  <div class="modal-footer">
	    <button type="submit" class="btn btn-primary" aria-hidden="true" data-loading-text="Sending..." data-submit-form="#new_pdf_location_email">Send</button>
	  </div>
</div>