<% title "Taxonomies" %>

<% content_for :search do %>
	<%= search_form Taxonomy, "Taxonomy" %>
<% end %>

<% content_for :top_nav do %>
	<% if can? :create, Taxonomy %>
		<li><%= link_to content_tag(:i,"",:class => "icon-file") + "New Taxonomy", new_admin_taxonomy_path, :class => "" %></li>
	<% end %>
<% end %>


<h1 class="page-title"><i class="icon-tags"></i>&nbsp;Taxonomy</h1>
<div class="box">
	<%= alphabet_filter @taxonomies %>
	
	<table class="table table-striped table-bordered">
	  <thead>
	  <tr>
	    <th><%= sort_column("taxonomies.label", "Name") %></th>
	    <th><%= sort_column("taxonomies.type", "Type") %></th>
	    <th>Actions</th>
	  </tr>
	  </thead>
	  <tfoot>
	  	<tr>
	    	<th colspan="4" class="filter-row">
	    		<div class="per-page pull-left">
	    			<%= per_page_select %>
	    		</div>
	    		<div class="filters pull-right">
			
	    		</div>
	    	</th>
	    </tr>
	  </tfoot>
	
	<% @taxonomies.each do |taxonomy| %>
	  <tr>
	  	
	    <td><%= taxonomy.name %></td>
	    <td><%= taxonomy.type_name %></td>
	    <td class="td-actions">
	      <div class="btn-group">
	        <%= link_to raw('<i class="icon-eye-open"></i>'), admin_taxonomy_path(taxonomy), :class => 'btn btn-small' if can? :read, Taxonomy %>
	        <%= link_to raw('<i class="icon-edit"></i>'), edit_admin_taxonomy_path(taxonomy), :class => 'btn btn-small btn-warning' if can? :edit, Taxonomy %>
	        <%= link_to raw('<i class="icon-trash icon-white"></i>'), admin_taxonomy_path(taxonomy), method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-small btn-danger' if can? :delete, Taxonomy %>
	      </div>
	    </td>
	  </tr>
	<% end %>
	</table>
	
	<%= paginate @taxonomies %>
</div>
