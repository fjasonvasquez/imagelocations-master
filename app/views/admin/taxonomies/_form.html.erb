<div class="box">
<%= simple_form_for([:admin, taxonomy]) do |f| %>
	<%= f.input :name, :input_html => {:class => 'input-block-level input-big'} %>
	
	<%= f.input :type, :as => :select, :collection => Taxonomy.taxonomy_types %>
	
	<%= f.input :priority %>
	
	<%= f.input :public, :as => :boolean %>
		
	<div class="form-actions">
	<%= f.submit taxonomy.new_record? ? "Add Taxonomy" : "Update Taxonomy", 
			   				taxonomy.new_record? ? { :class => 'btn btn-primary' } : { :class => 'btn btn-success' } %>
	</div>
<% end %>
</div>