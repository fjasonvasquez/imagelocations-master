<% title "Permits" %>

<% content_for :search do %>
	<%= search_form Permit %>
<% end %>

<% content_for :top_nav do %>
	<% if can? :create, Permit %>
		<li><%= link_to content_tag(:i,"",:class => "icon-file") + "New Permit", new_admin_permit_path, :class => "" %></li>
	<% end %>
<% end %>

<h1 class="page-title"><i class="icon-legal"></i>&nbsp;Permits</h1>
<div class="box">
	<%= alphabet_filter @permits %>
	
	<table class="table table-striped table-bordered table-thumbnails">
	<thead>
	  <tr>
	  	<th class="thumb"></th>
	    <th><%= sort_column("permits.name", "Name") %></th>
	    <th class="center"><%= sort_column("locations_count", "Locations") %></th>
	    <th class="center">Actions</th>
	  </tr>
	</thead>
	<tfoot>
	  	<tr>
	    	<th colspan="4" class="filter-row">
	    		<div class="per-page pull-left">
	    			<%= per_page_select %>
	    		</div>
	    	</th>
	    </tr>
	  </tfoot>
	 <tbody>
	
	<% @permits.each do |permit| %>
	  <tr>
	  	<td class="thumb"><%=
	  		unless permit.logo_url.nil?	
	  			image_tag permit.logo_url(:icon), :class => :cover
	  		else
	  			holder_tag "40x40", 'None'
	  		end
	  		%>
	  	</td>
	    <td class="title">
	    	<% if can? :read, Permit %>
	    		<%= link_to permit.name, admin_permit_path(permit) %>
	    	<% else %>
	    	
	    		<%= permit.name %>
			<% end %>
	    </td>
	    <td class="td-count center"><%= count_tag permit.locations.count %></td>
	    <td class="td-actions">
	      <div class="btn-group">
	        <%= link_to raw('<i class="icon-eye-open"></i>'), admin_permit_path(permit), :class => 'btn btn-mini' if can? :read, Permit %>
	        <%= link_to raw('<i class="icon-edit"></i>'), edit_admin_permit_path(permit), :class => 'btn btn-mini btn-warning' if can? :edit, Permit %>
	        <%= link_to raw('<i class="icon-trash icon-white"></i>'), admin_permit_path(permit), method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-mini btn-danger' if can? :delete, Permit %>
	      </div>
	     </td>
	  </tr>
	<% end %>
	</table>
	
	<%= paginate @permits %>
</div>
