<% title "Promo Codes" %>


<% content_for :top_nav do %>
	<% if can? :create, PromoCode %>
		<li><%= link_to content_tag(:i,"",:class => "icon-plus") + "New Promo Code", new_admin_promo_code_path, :class => "" %></li>
	<% end %>
<% end %>

<h1 class="page-title"><i class="icon-map-marker"></i>&nbsp;Promo Codes</h1>
<div class="box">
	
	
	<table class="table table-striped table-bordered table-thumbnails">
	<thead>
	  <tr>
	    <th>Plan</th>
	     <th><%= sort_column("promo_codes.code", "Code") %></th>
	    <th><%= sort_column("promo_codes.discount", "Discount") %></th>
	    <th class="center">Actions</th>
	  </tr>
	</thead>
	<tfoot>
	  	<tr>
	    	<th colspan="4" class="filter-row">
	    		<div class="per-page pull-left">
	    			<%= per_page_select %>
	    		</div>
	    	</th>
	    </tr>
	  </tfoot>
	 <tbody>
	
	<% @promo_codes.each do |promo_code| %>
	  <tr>
	  	<td class="title">
	    	
			
			<% if can? :read, promo_code.plan %>
	    		<%= link_to promo_code.plan.name, admin_plan_path(promo_code.plan) %>
	    	<% else %>
	    		<%= promo_code.plan.name %>
	    	<% end %>

	    </td>
	    <td><%= promo_code.code %>
	    		    </td>
	    <td class="td-count">
	    	<%= format_price promo_code.discount %>
	    </td>
	    <td class="td-actions">
	      <div class="btn-group">
	        <%= link_to raw('<i class="icon-eye-open"></i>'), admin_promo_code_path(promo_code), :class => 'btn btn-mini' if can? :read, promo_code %>
	        <%= link_to raw('<i class="icon-edit"></i>'), edit_admin_promo_code_path(promo_code), :class => 'btn btn-mini btn-warning' if can? :edit, promo_code %>
	        <%= link_to raw('<i class="icon-trash icon-white"></i>'), admin_promo_code_path(promo_code), method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-mini btn-danger' if can? :delete, promo_code %></td>
	      </div>
	  </tr>
	<% end %>
	</table>
	
	<%= paginate @promo_codes %>

</div>