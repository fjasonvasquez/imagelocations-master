<% title "Sort Tears" %>

<% content_for :top_nav do %>
	<% if can? :read, Location %>
		<li><%= link_to content_tag(:i,"",:class => "icon-plus") + "View Location", admin_location_path(@location), :class => "" %></li>
	<% end %>
<% end %>


<h1 class="page-title"><i class="icon-map-marker"></i>&nbsp;Sort Tears</h1>

<div class="box">
	<%= form_tag reorder_admin_tears_path, method: :post do %>
		
		<table class="table table-striped table-bordered table-ordered table-thumbnails">
		  <thead>
		  <tr>
		  	<th class="reorder"></th>
		    <th class="thumb"></th>
		    <th>Name</th>
		  </tr>
		  </thead>
		  <tbody>
		<% @tears.each_with_index do |tear,index| %>
		  <tr>
		  	<td class="reorder">
		  		<i class="icon-reorder handle"></i>
		  		<%= hidden_field_tag "tear_ids[]",tear.id %>
		  	</td>
		  	<td class="thumb"><%=
	  		unless tear.cover_url.nil?	
	  			image_tag tear.cover_url(:tiny), :class => :cover
	  		else
	  			holder_tag "40x40", 'None'
	  		end
	  		%></td>
		  	<td><%= tear.name %></td>
		  
		  </tr>
		<% end %>
		  </tbody>
		</table>
	<% end %>
</div>