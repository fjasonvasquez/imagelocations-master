<div class="hide">    
    <%= builder.hidden_field :id %>
    <%= builder.hidden_field :taxonomy_term_id %>
    <%= builder.hidden_field :enable, :disabled => cannot?(:manage, builder.object.taxonomy_term), :value => builder.object.enable ? "1" : "0" %>
    <%= builder.hidden_field :site_entity_id %>
    <%= builder.fields_for :taxonomy_term do |tt| %>
    	<%= tt.hidden_field :id %>
    	<%= tt.hidden_field :taxonomy_id %>
    	<%= tt.hidden_field :name %>
    <% end %>
	
</div>