<h1 class="page-title"><i class="icon-building"></i>&nbsp;<%= @company.name %></h1>

<div class="row-fluid">
	<div class="span3 well">
		<% unless @company.logo.nil? %>
			<%= image_tag @company.logo_url, :class => "" %>
		<% else %>
		
		<% end %>
	</div>
	<div class="span9">
		<div class="box">
			<h4>Users</h4>
			<table class="table table-striped table-bordered">
				<thead>
					<tr>
						<th class="thumb"></th>
						<th>User</th>
						<th>Last Signed In</th>
						<th>Memberships</th>
						<th>Status</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
				<% @company.users.each do |user| %>
					<tr>
						<td class="avatar"><%= image_tag avatar_url user %></td>
						<td><%= user.full_name %></td>
						<td><%= format_user_date user.last_sign_in_at %></td>
						<td><% user.memberships.each do |membership|%>
			      			<%= link_to(format_membership_name(membership), admin_user_membership_path(user,membership)) %>
				  			<% end %>
				  		</td>
				  		<td><%= status_tag user.status%></td>
					</tr>
				<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>