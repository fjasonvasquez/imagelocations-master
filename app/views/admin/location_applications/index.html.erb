<% title "Applications" %>

<% content_for :search do %>
	
<% end %>

<h1 class="page-title"><i class="icon-map-marker"></i>&nbsp;Applications <small><%= @count %></small></h1>
<div class="box">
	
	
	<table class="table table-striped table-bordered">
	<thead>
	  <tr>
	  	
	  	<th>Name</th>
	  	<th>Email</th>
	  	<th>Submition Date</th>
	  	<th>Photos</th>
	    <th>Actions</th>
	  </tr>
	</thead>
	<tfoot>
	  	<tr>
	    	<th colspan="5" class="filter-row">
	    		<div class="per-page pull-left">
	    			<%= per_page_select %>
	    		</div>
	    	</th>
	    </tr>
	  </tfoot>
	 <tbody>
	
	<% @location_applications.each do |application| %>
	  <tr>
	  	<td>
		  	<%= application.name %>
	  	</td>
	  	<td>
		  	<%= mail_to application.email %>
	  	</td>
	  	<td>
		  	<%= application.created_at.to_formatted_s(:long) %>
	  	</td>
	  	
	  	<td class="td-count">
		  	<%= application.location_application_images.count %>
	  	</td>
 	
	  	<td class="td-actions">
	      <div class="btn-group">
	        <%= link_to raw('<i class="icon-eye-open"></i>'), admin_location_application_path(application), :class => 'btn btn-small' if can? :read, application %>
	         <%= link_to raw('<i class="icon-trash icon-white"></i>'), admin_location_application_path(application), method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-small btn-danger' if can? :delete, application %>
	      </div>
	    </td>
	  </tr>
	<% end %>
	</table>
	
	<%= paginate @location_applications %>
</div>
