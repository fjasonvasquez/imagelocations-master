<div class="container">
	<div class="row">
		<div class="span4 offset4 well">
			<h2>Sign in</h2>
			
			<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :validate => false) do |f| %>
			 
			  <%= f.input :login, :input_html => {:autofocus => true} %>
			  
			  <%= f.input :password %>
			
			  <% if devise_mapping.rememberable? -%>
			  	
			  	<%= f.input :remember_me, :as => :boolean, :label => false, :inline_label => true %>
			  <% end -%>
			
			 <%= f.button :submit,"Sign In", :class => "btn-primary" %>
			<% end %>
			
			<%= render "devise/shared/links" %>
		</div>
	</div>
</div>